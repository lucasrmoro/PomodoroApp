<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="br.com.lucas.pomodoroapp">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.PomodoroApp">
        <activity
            android:name=".ui.CustomSplashScreenActivity"
            android:exported="true"
            android:theme="@style/Theme.PomodoroAppNoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".ui.ListTaskActivity"
            android:label="@string/app_name"
            android:theme="@style/Theme.PomodoroApp">
        </activity>
        <activity
            android:name=".ui.EditTaskActivity"
            android:theme="@style/Theme.PomodoroAppNoActionBar"
            android:label="@string/app_name"
            android:parentActivityName=".ui.ListTaskActivity"
            android:screenOrientation="portrait"
            android:windowSoftInputMode="stateAlwaysVisible">
        </activity>
    </application>
</manifest>